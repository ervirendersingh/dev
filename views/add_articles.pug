extends layout

block content
    h1 #{title}
    form(method='POST',action='/article/add')
      #form-group
        label Title:
        input.form-control(name='title',type='text')
      #form-group
        label Body:
        input.form-control(name='body',type='text')
      input.btn.btn-primary(type='submit',value='Submit')
